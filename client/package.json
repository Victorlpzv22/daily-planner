{
  "name": "daily-planner",
  "version": "1.1.0",
  "description": "Planificador diario con tareas y calendario",
  "author": {
    "name": "Victor",
    "email": "victor@example.com"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win",
    "dist:all": "npm run build && electron-builder --linux --win"
  },
  "build": {
    "appId": "com.dailyplanner.app",
    "productName": "Daily Planner",
    "copyright": "Copyright Â© 2024 Victor",
    "asar": true,
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/icon.png",
      "public/icon.ico",
      "node_modules/electron-updater/**/*",
      "node_modules/lazy-val/**/*",
      "node_modules/semver/**/*"
    ],
    "extraResources": [
      {
        "from": "../server/dist",
        "to": "server/dist",
        "filter": [
          "daily-planner-server*"
        ]
      }
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "maintainer": "Victor <victor@example.com>",
      "icon": "public/icon.png",
      "desktop": {
        "entry": {
          "Name": "Daily Planner",
          "Comment": "Organize your daily tasks",
          "Keywords": "planner;tasks;calendar;productivity;"
        }
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Daily Planner",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Victorlpzv22",
        "repo": "daily-planner"
      }
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.16",
    "@mui/material": "^5.14.17",
    "@mui/x-date-pickers": "5.0.20",
    "axios": "^0.27.2",
    "date-fns": "^2.30.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}